@using UNagi.Models
@using UNagi.ViewModel
@model UNagi.ViewModel.MateriasIndexViewModel

<p class="main">Materias</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var materia in Model.Materias)
        {
            <tr>
                <td>@materia.Nombre</td>
            </tr>
        }
    </tbody>
</table>
<div class="nueva-materia" style="display: none;">
    <button onclick="loadDataAsync('New', 'Materias')" class="h2">Nueva Materia</button>
</div>
<div class="solo-alumnos" style="display: none;">
    <button onclick="loadDataAsync('Register','Materias')" class="h2">Inscribir Materias</button>
    <button onclick="loadDataAsync('List', 'Materias')" class="h2">Ver mis Materias</button>
</div>

<script>
    $(document).ready(function() {
        if (localStorage.sesionUNagi == "maestro") {
            $(".nueva-materia").show();
        }
        if (localStorage.sesionUNagi == "alumno") {
            $(".solo-alumnos").show();
        }
    });
</script>
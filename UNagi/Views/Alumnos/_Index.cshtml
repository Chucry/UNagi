@using UNagi.Models
@using UNagi.ViewModel
@model UNagi.ViewModel.AlumnoIndexViewModel

<p class="main">Alumno</p>

<table class="table">
    <thead>
        <tr>
            <th>Matrícula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Editar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alumno in Model.Alumnos)
        {
            <tr>
                <td>@alumno.Matricula</td>
                <td>@alumno.Nombre</td>
                <td>@alumno.Apellido</td>
                <td><a href="../Alumnos/Details/@alumno.Id"><span class="glyphicon glyphicon-edit"></span></a></td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("New", "Alumnos")"><button class="h2">Nuevo Alumno</button></a>